Plug 'mattn/emmet-vim'
function! HtmlExpander()
    let line   = getline(".")
    let col    = col(".")
    let first  = line[col-2]
    let second = line[col-1]
    let third  = line[col]

    if first ==# ">"
        if second ==# "<" && third ==# "/"
            return "\<CR>\<C-o>==\<C-o>O"

        else
            return "\<CR>"

        endif

    else
        return "\<CR>"
    endif
endfunction
autocmd Filetype html inoremap <buffer> <expr> <CR> HtmlExpander()

